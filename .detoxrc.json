{
  "testRunner": "jest",
  "runnerConfig": "e2e/config.json",
  "apps": {
    "ios.release": {
      "type": "ios.app",
      "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/DetoxTemplate.app",
      "build": "xcodebuild -workspace ios/DetoxTemplate.xcworkspace -scheme DetoxTemplate -configuration Release -sdk iphonesimulator -derivedDataPath ios/build -arch x86_64"
    },
    "ios.debug": {
      "type": "ios.app",
      "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/DetoxTemplate.app",
      "build": "xcodebuild -workspace ios/DetoxTemplate.xcworkspace -scheme DetoxTemplate -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build -arch x86_64"
    },
    "android.debug": {
      "type": "android.apk",
      "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
      "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd .."
    },
    "android.release": {
      "type": "android.apk",
      "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
      "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd .."
    }
  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 12",
        "os": "iOS 14.5"
      }
    },
    "emulator.intel": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_API_S_Intel"
      }
    },
    "emulator.arm": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_API_S_ARM"
      }
    }
  },
  "configurations": {
    "ios.staging": {
      "device": "simulator",
      "app": "ios.staging"
    },
    "ios.release": {
      "device": "simulator",
      "app": "ios.release"
    },
    "android.staging.intel": {
      "device": "emulator.intel",
      "app": "android.staging"
    },
    "android.staging.arm": {
      "device": "emulator.arm",
      "app": "android.staging"
    },
    "android.release": {
      "device": "emulator",
      "app": "android.release"
    }
  }
}
